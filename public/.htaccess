

RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www prefix from main domain and subdomains
RewriteCond %{HTTP_HOST} ^www\.([^.]+\..+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]


Header set X-Frame-Options DENY
Header set X-Content-Type-Options nosniff
Header set X-XSS-Protection "1; mode=block"
Header set X-Permitted-Cross-Domain-Policies "none"
Header set Referrer-Policy "strict-origin-when-cross-origin"
Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
Header set Permissions-Policy "accelerometer=*, autoplay=(), camera=(), gyroscope=*, geolocation=(self), fullscreen=(self), magnetometer=(), microphone=(), payment=(), picture-in-picture=(self)"


